{
  "info": {
    "name": "MiniCommerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Users - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/users",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\"\n}"
        }
      }
    },
    {
      "name": "Categories - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/categories",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Clothing\"\n}"
        }
      }
    },
    {
      "name": "Products - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/products",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Jacket\",\n  \"sku\": \"SKU-1\",\n  \"price\": 99.90,\n  \"stock\": 10,\n  \"categoryId\": 1\n}"
        }
      }
    },
    {
      "name": "Categories - Delete (restricted)",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/categories/1"
      }
    },
    {
      "name": "Orders - Patch Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/orders/1",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PAID\"\n}"
        }
      }
    },
    {
      "name": "Reviews - Patch",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/api/reviews/1",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Still good\"\n}"
        }
      }
    }
  ]
}